@model LapZone.Models.LaptopDetail

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Laptop Details</title>
    <style>
       

        h2 {
            color: #dc3545;
        }

        .form-container {
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .label {
            font-weight: bold;
            display: block;
            margin-bottom: 8px;
            color: #343a40;
        }

        .input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            color: #343a40;
        }

        .checkbox {
            margin-right: 5px;
        }

        .save-btn {
            background-color: #dc3545;
            color: #ffffff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            transition: background-color 0.3s;
        }

            .save-btn:hover {
                background-color: #c82333;
            }

        .back-btn {
            background-color: #343a40;
            color: #ffffff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin-left: 10px;
            transition: background-color 0.3s;
        }

            .back-btn:hover {
                background-color: #23272b;
            }
    </style>

</head>
<body>

    <h2>Add Laptop Details</h2>

    <div class="form-container">
        <form method="post">

            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="label" for="Brand">Brand:</label>
                <input class="input" asp-for="Brand" required>
                <span asp-validation-for="Brand"></span>
            </div>

            <div class="form-group">
                <label class="label" for="CPU">CPU:</label>
                <input class="input" asp-for="CPU" required>
                <span asp-validation-for="CPU"></span>
            </div>

            <div class="form-group">
                <label class="label" for="Storage">Storage:</label>
                <input class="input" asp-for="Storage" required>
                <span asp-validation-for="Storage"></span>
            </div>

            <div class="form-group">
                <label class="label" for="RAM">RAM:</label>
                <input class="input" asp-for="RAM" required>
                <span asp-validation-for="RAM"></span>
            </div>

            <div class="form-group">
                <label class="label" for="GPU">GPU:</label>
                <input class="input" asp-for="GPU" required>
                <span asp-validation-for="GPU"></span>
            </div>

            <div class="form-group">
                <label class="label" for="ScreenSize">Screen Size:</label>
                <input class="input" asp-for="ScreenSize" required>
                <span asp-validation-for="ScreenSize"></span>
            </div>

            <div class="form-group">
                <label class="label" for="Weight">Weight:</label>
                <input class="input" asp-for="Weight" required>
                <span asp-validation-for="Weight"></span>
            </div>

            <button type="submit" class="save-btn">Save</button>

            <a href="#" class="back-btn">Back to Products</a>
        </form>
    </div>

</body>
</html>
