@model LapZone.ViewModels.SignUpRequest
 
@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
  

    <title>Sign Up</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: auto;
            padding: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        form {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-right: -50px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #d10024;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: green;
            }

        .guest-button-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .guest-button {
            background-color: #fff;
            color: #000;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            margin-left: 10px;
            display: flex;
            align-items: center;
        }

            .guest-button:hover {
                background-color: #fff;
                color: blue;
            }

        span {
            color: #e74c3c;
        }

        .custom-file {
            position: relative;
            overflow: hidden;
            color: #001;
            margin-top: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .custom-file-input {
            position: absolute;
            top: 0;
            right: 0;
            color: #001;
            margin: 0;
            opacity: 0;
        }

        .custom-file-label {
            display: inline-block;
            cursor: pointer;
            padding: 8px 12px;
            background-color: #001;
            color: #fff;
            border-radius: 5px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

            .custom-file-label:hover {
                background-color: #2980b9;
                color: blue;
            }

        .field-validation-error[data-valmsg-for="clientFile"] {
            display: block;
            text-align: center;
            color: #e74c3c; 
            margin-top: 10px;
        }
    </style>
   
</head>
<body>
    <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data" >
        @Html.AntiForgeryToken()

        <h2 style="text-align: center;">Sign Up</h2>

        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" id="FullName" />
        <span asp-validation-for="FullName" class="field-validation-error"></span>

        <label asp-for="Email">Email</label>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>

        <label asp-for="PasswordHash">Password</label>
        <input asp-for="PasswordHash" type="password" />
        <span asp-validation-for="PasswordHash"></span>
        <label class="alert-danger">@ViewData["Wrong"]</label>

        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" name="ConfirmPassword" />

        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>



        <div class="form-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" asp-for="clientFile" accept="image/*" onchange="updateFileName()">
                <label class="custom-file-label" id="photoLabel" for="clientFile">Choose a photo</label>
            </div>
            <span class="text-danger">@Html.ValidationMessageFor(model => model.clientFile)</span>
        </div>

        <div class="guest-button-container">
            <button type="submit">Sign up</button>

            <a href="@Url.Action("Index", "Home")" class="guest-button">
                Continue as a guest
                <i style="font-size:20px;" class="bi bi-person-fill"></i>
            </a>
        </div>

        <p>Already have an account? <a href="@Url.Action("Login", "Account")">Login</a></p>
    </form>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('form').addEventListener('submit', function (event) {
                var password = document.querySelector('input[name="PasswordHash"]').value;
                var confirmPassword = document.querySelector('input[name="ConfirmPassword"]').value;

                if (password !== confirmPassword) {
                    alert('Passwords do not match.');
                    event.preventDefault();
                }
            });
        });

        function updateFileName() {
            // Get the input element and its value
            var input = document.querySelector('.custom-file-input');
            var fileName = input.value.split('\\').pop();

            // Update the label text with the selected file name
            document.getElementById('photoLabel').innerText = fileName;
        }
    </script>
</body>
</html>
