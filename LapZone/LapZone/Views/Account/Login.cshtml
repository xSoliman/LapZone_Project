@model LapZone.ViewModels.LoginRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <title>Login</title>
    <style>
        body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: auto;
        padding: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        }

        form {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        margin-right: -50px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        }

        label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        }

        input {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        box-sizing: border-box;
        }

        button {
        background-color: #d10024;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        }

        button:hover {
        background-color: green;
        }

        span {
        color: #e74c3c;
        }

        .alert-danger {
        color: #d10024;
        }

        .guest-button-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
        }

        .guest-button {
        background-color: #fff;
        color: #000;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        margin-left: 10px;
        display: flex;
        align-items: center;
        }

        .guest-button:hover {
        background-color: #fff;
        color: blue;
        }

    </style>
</head>
<body>


    <form method="post" asp-controller="Account" asp-action="Login">
        @Html.AntiForgeryToken()
    <label class="alert-danger">@TempData["Wrong"]</label>

        <h2 style="text-align: center;">Login</h2>

        <label asp-for="Email">Email</label>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>

        <label asp-for="PasswordHash">Password</label>
        <input asp-for="PasswordHash" type="password" />
        <span asp-validation-for="PasswordHash"></span>


        <div class="guest-button-container">
            <button type="submit">Login</button>

            <!-- "Continue as a guest" button -->
            <a  href="@Url.Action("Index", "Home")" class="guest-button">
                 Continue as a guest
                <i style="font-size:20px;" class="bi bi-person-fill"></i>
            </a>
        </div>

        <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Sign Up</a></p>
    </form>
</body>
</html>
